#include <vector>
using namespace std;

class Solution {
public:
    vector<int> twoSum(vector<int>& numbers, int target) {
        int left = 0;
        int right = numbers.size() - 1;

        while (left < right) {
            int sum = numbers[left] + numbers[right];

            if (sum == target) {
                return {left + 1, right + 1};  // 下标从 1 开始
            }
            else if (sum < target) {
                ++left;   // 和太小，左指针右移
            }
            else {
                --right;  // 和太大，右指针左移
            }
        }

        return {};
    }
};
