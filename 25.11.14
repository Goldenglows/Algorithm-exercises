#include <vector>
using namespace std;

class Solution {
public:
    vector<vector<int>> rangeAddQueries(int n, vector<vector<int>>& queries) {
        // Step 1: 创建 (n+2) x (n+2) 的差分数组，多开 2 行 2 列防止越界
        // diff[i][j] 表示从 (i,j) 开始向右下区域的增量影响
        vector<vector<int>> diff(n + 2, vector<int>(n + 2, 0));
        
        // Step 2: 遍历每个查询，只在四个角做 O(1) 标记
        for (const auto& q : queries) {
            int row1 = q[0], col1 = q[1];
            int row2 = q[2], col2 = q[3];
            
            // 左上角：开始加 1
            diff[row1][col1] += 1;
            
            // 右边界：停止列加 1（如果没越界）
            if (col2 + 1 < n) {
                diff[row1][col2 + 1] -= 1;
            }
            
            // 下边界：停止行加 1（如果没越界）
            if (row2 + 1 < n) {
                diff[row2 + 1][col1] -= 1;
            }
            
            // 右下角：补偿多减的部分（如果都没越界）
            if (row2 + 1 < n && col2 + 1 < n) {
                diff[row2 + 1][col2 + 1] += 1;
            }
        }
        
        // Step 3: 二维前缀和恢复出最终矩阵
        vector<vector<int>> mat(n, vector<int>(n, 0));
        
        for (int i = 0; i < n; ++i) {
            for (int j = 0; j < n; ++j) {
                // 当前格的值 = 左边格 + 上边格 - 左上格 + 差分值
                // 这是二维前缀和的递推公式
                if (i > 0) mat[i][j] += mat[i - 1][j];
                if (j > 0) mat[i][j] += mat[i][j - 1];
                if (i > 0 && j > 0) mat[i][j] -= mat[i - 1][j - 1];
                mat[i][j] += diff[i][j];  // 加上该点的差分贡献
            }
        }
        
        return mat;
    }
};
